{
  "name": "saf-site-vitepress",
  "version": "1.0.0",
  "description": "MITRE SAF documentation site built with VitePress",
  "type": "module",
  "scripts": {
    "dev": "vitepress dev docs",
    "build": "vitepress build docs",
    "preview": "vitepress preview docs",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "dev:setup": "./scripts/setup.sh",
    "dev:setup:check": "./scripts/setup.sh --check",
    "dev:setup:force": "./scripts/setup.sh --force",
    "db:dump": "tsx scripts/db-diffable.ts dump .pocketbase/pb_data/data.db .pocketbase/pb_data/diffable",
    "db:load": "tsx scripts/db-diffable.ts load .pocketbase/pb_data/data.db .pocketbase/pb_data/diffable",
    "db:export": "./scripts/export-db.sh",
    "db:export:diff": "./scripts/export-db.sh --diff",
    "db:backup": "pb backup create",
    "db:backup:list": "pb backup list",
    "db:backup:download": "pb backup download",
    "db:backup:restore": "pb backup restore",
    "db:populate": "tsx scripts/fetch-readmes.ts",
    "db:populate:refs": "tsx scripts/fetch-readmes.ts --refs-only",
    "db:dbml": "tsx scripts/gen-dbml.ts",
    "pb:setup": "./scripts/setup-pb-cli.sh",
    "reload-data": "touch 'docs/validate/[slug].paths.ts'",
    "cli": "./scripts/cli.sh",
    "cli:test": "pnpm --filter @saf-site/cli test:run",
    "cli:build": "pnpm --filter @saf-site/cli build",
    "story:dev": "pnpm story:docs && histoire dev",
    "story:build": "pnpm story:docs && histoire build",
    "story:preview": "histoire preview",
    "story:docs": "tsx scripts/inject-story-docs.ts",
    "story:docs:check": "tsx scripts/inject-story-docs.ts --check",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "vue-tsc --noEmit",
    "ci:check": "pnpm typecheck && pnpm lint && pnpm test:run && pnpm story:docs:check",
    "ci:security": "pnpm audit --audit-level=high",
    "prepare": "husky"
  },
  "keywords": [
    "mitre",
    "saf",
    "security",
    "automation",
    "compliance"
  ],
  "author": "MITRE SAF Team",
  "license": "Apache-2.0",
  "packageManager": "pnpm@10.26.2",
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "lint-staged": {
    "*.{vue,ts,js,tsx,jsx}": [
      "eslint --fix"
    ],
    "*.story.vue": [
      "pnpm story:docs:check"
    ]
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.2.0",
    "@histoire/plugin-vue": "1.0.0-beta.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.9",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.17",
    "@vue/test-utils": "^2.4.6",
    "@vue/theme": "^2.3.0",
    "better-sqlite3": "^12.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-dbml-generator": "^0.10.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "glob": "^13.0.0",
    "happy-dom": "^20.1.0",
    "histoire": "1.0.0-beta.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "lucide-vue-next": "^0.562.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitepress": "2.0.0-alpha.15",
    "vitest": "^4.0.17",
    "vue": "^3.5.26",
    "vue-docgen-api": "^4.79.2",
    "vue-docgen-cli": "^4.79.0",
    "vue-tsc": "^3.2.3"
  },
  "pnpm": {
    "overrides": {
      "esbuild": ">=0.25.0",
      "mdast-util-to-hast": ">=13.2.1"
    },
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild",
      "vue-demi",
      "workerd"
    ]
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.3.14",
    "@iconify/vue": "^5.0.0",
    "@libsql/client": "^0.17.0",
    "@vueuse/core": "^14.1.0",
    "clipboard": "^2.0.11",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "fuse.js": "^7.1.0",
    "marked": "^17.0.1",
    "pocketbase": "^0.26.5",
    "reka-ui": "^2.7.0",
    "shiki": "^3.21.0",
    "vue3-json-viewer": "^2.4.1",
    "yaml": "^2.8.2",
    "zod": "^4.3.5"
  }
}
